// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
class student{
  string name;
  int roll;
  int age;
 float cgpa;
public:
 student(string n,int r,int ag,float grade){
     name=n;
     roll=r;
     age=ag;
     cgpa=grade;
     
 }
 void display(){
     cout<<name<<endl<<roll<<endl<<age<<endl<<cgpa<<endl;
 }
};
int main() {
    string n;
    getline(cin,n);
    int roll;
    cin>>roll;
    int age;
    cin>>age;
    float cgpa;
    cin>>cgpa;
   student s1(n,roll,age,cgpa);
   s1.display();
    return 0;
}
