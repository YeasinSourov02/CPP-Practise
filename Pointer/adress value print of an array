// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
int arr[]={5,10,15};
int* ptr=&arr[0];

for(int i=0;i<3;i++){
    cout<<ptr[i]<<" "<<&ptr[i]<<endl;
}
for(int i=0;i<3;i++){
    cout<<*ptr<<" ";
    ptr++;
}
ptr--;
cout<<endl;
for(int i=2;i>=0;i--){
    cout<<*ptr<<" ";
    ptr--;
}
    return 0;
}
