// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    /*  *
       **
      ***
      */
      int r;
      cin>>r;
      int nos=r-1;
      int nop=1;
      for(int i=1;i<=r;i++){
          for(int j=1;j<=nos;j++){
              cout<<" ";
          }
          for(int i=1;i<=nop;i++){
              cout<<"*";
          }
              cout<<endl;
              nos--;
              nop++;
          }
      
    return 0;
}
