// Online C++ compiler to run C++ program online
#include<iostream>
using namespace std;
int main() {
  int n;
  cin>>n;
  for(int i=1;i<=n;i++){
      int a=n/2+1;
      for(int j=1;j<=n;j++){
          if(j==a || i==a){
              cout<<"*";
          }
          else{
              cout<<" ";
          }
      }
          cout<<endl;
      }
  

    return 0;
}
