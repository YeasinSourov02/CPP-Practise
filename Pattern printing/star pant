// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
  int n;
  
  cin>>n;
  int nop=n;
  int nos=0;
  for(int i=1;i<=n;i++){
      for(int j=1;j<=nop;j++){
         cout<<"*";
      }
      for(int k=1;k<=nos;k++){
          cout<<" ";
      }
      for(int j=1;j<=nop;j++){
          cout<<"*";
          
      }
      nop--;
          nos=nos+2;
      cout<<endl;
  }
    return 0;
}
