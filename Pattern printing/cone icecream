// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
  int n;
  cin>>n;
  int nos=0;
  int nop=2*n-1;
  

  for(int i=1;i<=n;i++){
      for(int j=1;j<=nos;j++){
          
     cout<<" ";
      }
     for(int k=1;k<=nop;k++){
         
     
     cout<<"*";
  }


nos++;
nop=nop-2;
cout<<endl;
}
    return 0;
}
