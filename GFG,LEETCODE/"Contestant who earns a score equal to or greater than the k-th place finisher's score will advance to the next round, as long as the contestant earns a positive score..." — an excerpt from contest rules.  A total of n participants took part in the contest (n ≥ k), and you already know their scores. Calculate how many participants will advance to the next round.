// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    int k;
    cin>>k;
    int kelement;
   int arr[n];
   for(int i=0;i<n;i++){
       cin>>arr[i];
       if(i==k-1) kelement=arr[i];
   }
   
   int count=0;
   
   for(int i=0;i<n;i++){
       
       if(arr[i]>=kelement && arr[i]!=0) count++;
       
   }
     cout<<count;  
    
 
    return 0;
}
