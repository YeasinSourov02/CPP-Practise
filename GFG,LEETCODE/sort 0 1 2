class Solution {
  public:
    void sort012(vector<int>& arr) {
        int one=0,two=0,zero=0;
        for(int i=0;i<arr.size();i++){
            if(arr[i]==0) zero++;
            else if(arr[i]==1) one++;
            else two++;
        }
        for(int i=0;i<zero;i++){
            arr[i]=0;
        }
        for(int i=zero;i<one;i++){
            arr[i]=1;
        // code here
    }
    for(int i=one;i<two;i++){
            arr[i]=2;
    }
    
}
};
