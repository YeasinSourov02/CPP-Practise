// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
   long long n;
   cin>>n;
  
   
   int count=0;
   while(n){
       long long ls=n%10;
       
       if(ls==4) count++;
       else if(ls==7) count++;
       n=n/10;
   }
   if( count==4 || count==7 )cout<<"YES";
   else cout<<"NO";
    return 0;
}
