// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int main() {
  int t;
  cin>>t;
  int a,b,c,d;
 
  for(int i=0;i<t;i++){
       int output=0;
      cin>>a>>b>>c>>d;
      if(b>a) output++;
      if(c>a) output++;
      if(d>a) output++;
      cout<<output<<endl;
  }
  
  
  

    return 0;
}
