// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
 #include<vector>
 #include<algorithm>
int main() {
    string s;
    cin>>s;
    int count1=0,count2=0,count3=0;
    for(int i=0;i<s.size();i++){
        if(s[i]=='1') count1++;
        else if(s[i]=='2') count2++;
        else if(s[i]=='3') count3++;
    }
    string ans;
    while(count1--)
    ans=ans+'1'+ '+';
      while(count2--)
 ans=ans+ '2'+'+' ;
  while(count3--)
    ans=ans+'3'+'+';
    ans.pop_back();
 cout<<ans;
 
    return 0;
}
