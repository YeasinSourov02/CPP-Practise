// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
class student{
  string name;
  int roll;
 float cgpa;
public:
student(){
    name="Babar Azam";
    roll=2;
    cgpa=3.00;
}
 student(string n,int r,float grade){
     name=n;
     roll=r;
     cgpa=grade;
     
 }
  student(string name,float cgpa){
     this->name=name;
    
    
     this->cgpa=cgpa;
  }
 void display(){
     cout<<name<<endl<<roll<<endl<<cgpa<<endl;
 }
};
int main() {
    string n;
    getline(cin,n);
    int roll;
    cin>>roll;
   
    float cgpa;
    cin>>cgpa;
    student s;
   student s1("Virat Kohli",1,3.30);
   student s2("Steven Smith",3.40);
   s.display();
   s1.display();
   s2.display();
    return 0;
}
